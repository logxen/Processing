<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<root>
<name>textWidth()</name>

<category>Typography</category>

<subcategory>Attributes</subcategory>

<type></type>

<example>
<image>textWidth_.png</image>
<code><![CDATA[
PFont font;
font = loadFont("Sabon-Roman-32.vlw");
textFont(font, 32);

char c = 'T';
float cw = textWidth(c);
text(c, 0, 40);
line(cw, 0, cw, 50); 

String s = "Tokyo";
float sw = textWidth(s);
text(s, 0, 85);
line(sw, 50, sw, 100);
]]></code>
</example>

<description><![CDATA[
Calculates and returns the width of any character or text string.
]]></description>

</root>
